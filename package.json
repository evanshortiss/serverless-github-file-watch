{
  "name": "serverless-github-file-watch",
  "version": "1.0.0",
  "description": "A serverless function that will notify configured recipients of a file change in a GitHub repository.",
  "main": "handler.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "serverless deploy -v",
    "update": "serverless deploy function -f checkForNewCommits -v",
    "format": "standard handler.js --fix",
    "invoke": "serverless invoke -f checkForNewCommits",
    "logs": "serverless logs -f checkForNewCommits -t"
  },
  "author": "Evan Shortiss",
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "husky": "~2.3.0",
    "serverless": "~1.43.0",
    "standard": "~12.0.1"
  },
  "dependencies": {
    "@sendgrid/mail": "~6.4.0",
    "env-var": "~4.0.0",
    "got": "~9.6.0",
    "timestring": "~6.0.0"
  }
}
